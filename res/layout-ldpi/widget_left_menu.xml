<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dip"
    android:layout_height="match_parent"
    android:background="#726252" >

    <ImageView
        android:id="@+id/iv_menu_type"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:padding="15dip"
        android:src="@drawable/icon_english" />

    <TextView
        android:id="@+id/tv_menu_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_menu_type"
        android:layout_centerHorizontal="true"
        android:ems="1"
        android:gravity="center_horizontal"
        android:text="英语口语"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dip"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/iv_menu_back"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_marginBottom="10dip"
            android:padding="5dip"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_menu_back"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>