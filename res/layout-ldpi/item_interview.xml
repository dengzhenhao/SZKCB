<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bg_interview"
    android:layout_width="300dip"
    android:layout_height="100dip"
    android:background="@drawable/border_input_620000"
    android:gravity="center"
    android:minHeight="100dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_interview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018年5月1日上午"
        android:textColor="@color/color_list_head"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/tv_interview_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/interview_info"
        android:layout_margin="5dip"
        android:textColor="@color/color_list_head"
        android:textSize="16sp"></TextView>

</LinearLayout>