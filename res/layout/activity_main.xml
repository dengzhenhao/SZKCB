<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dip" >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="460dip"
                android:layout_height="54dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:background="@drawable/icon_title_main" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/iv_user"
                android:gravity="center_vertical"
                android:text="当前版本:1.0"
                android:textColor="#000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_username"
                android:src="@drawable/icon_user" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/iv_cancel"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="25dip"
                android:src="@drawable/icon_cancel" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="#726350" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="50dip"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_confirm_student_info"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:background="@drawable/btn_confirm_student_info" />

            <ImageView
                android:id="@+id/iv_sight"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_sight" />

            <ImageView
                android:id="@+id/iv_height_weight"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_height_weight" />

            <ImageView
                android:id="@+id/iv_color_weakness"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_bsnl" />

            <ImageView
                android:id="@+id/iv_english"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_english" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_chinese"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:background="@drawable/btn_chinese" />

            <ImageView
                android:id="@+id/iv_first_competition_group"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_first_competition_group" />

            <ImageView
                android:id="@+id/iv_first_competition"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_first_competition" />

            
                <ImageView
                android:id="@+id/iv_second_competition_group"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_second_competition_group" />
            

            <ImageView
                android:id="@+id/iv_second_competition"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_second_competition" />

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_help" 
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>